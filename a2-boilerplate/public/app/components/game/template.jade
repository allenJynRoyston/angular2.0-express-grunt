#game-container.ui.grid    
    div(style='padding: 0px; height: 100%; overflow: hidden', 
        [ngClass]="{FullThreeJS: 'sixteen wide column left', FullPhaser: 'hidden', Split: 'eight wide column', ThreeFit: 'eight wide column left', PhaserFit: 'eight wide column left'}[layout.type]")
        h1(style='position: absolute; color: white; width: 100%; text-align: center; margin-top: 10px') ThreeJS (3D  Engine)
        three-js( (three)="threeData1($event)",  [settings]="{file: 'node_modules/three/three.min.js'}")
    div(style='padding: 0px; height: 100%; overflow: hidden',  
        [ngClass]="{FullThreeJS: 'hidden', FullPhaser: 'sixteen wide column left', Split: 'eight wide column', ThreeFit: 'eight wide column left', PhaserFit: 'eight wide column left'}[layout.type]")
        h1(style='position: absolute; color: white; width: 100%; text-align: center; margin-top: 10px') Phaser (2D  Engine)
        phaser( (phaser)="phaserData1($event)", [settings]="{file: 'node_modules/phaser/build/phaser.min.js'}")

.ui.grid.container
  .sixteen.wide.column
    button.ui.button.orange( (click)='destroyPhaser()')
      | Destroy     
    button.ui.button.green( (click)='loadPhaser("/javascripts/objects/phaserGame1.js")')
      | Load Game 1      
    button.ui.button.green( (click)='loadPhaser("/javascripts/objects/phaserGame2.js")')
      | Load Game 2

.ui.grid.container
  .sixteen.wide.column
    button.ui.button(fullscreen-btn [options]='{selector: "game-container"}')
      | Fullscreen Mode
    button.ui.button([ngClass]="{FullThreeJS: 'red'}[layout.type]", (click)='changeLayout("FullThreeJS")')
      | ThreeJS
    button.ui.button([ngClass]="{FullPhaser: 'red'}[layout.type]", (click)='changeLayout("FullPhaser")')
      | Phaser
    button.ui.button([ngClass]="{Split: 'red'}[layout.type]", (click)='changeLayout("Split")')
      | Split
    button.ui.button([ngClass]="{ThreeFit: 'red'}[layout.type]", (click)='changeLayout("ThreeFit")')
      | Three (Fit)
    button.ui.button([ngClass]="{PhaserFit: 'red'}[layout.type]", (click)='changeLayout("PhaserFit")')
      | Phaser (Fit)
