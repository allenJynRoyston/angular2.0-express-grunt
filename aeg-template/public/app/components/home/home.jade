.ui.inverted.vertical.center.aligned.segment.mobile.hidden
  .ui.container(style='padding: 50px')
    .ui.text.container      
      #shape1.ui.shape
        .sides
          .shape-container.side.active
            .content.shape-container
              .center
                h1.ui.inverted.header
                  | Why did the web developer cross the road?
                img.ui.small.bordered.rounded.image.centered(src='media/images/fullstack.png' )   
                h2
                  | To get to the other site.
                br        
          .shape-container.side(*ngFor="#j of jokes; #index = index")
            .content.shape-container
              .center
                h1.ui.inverted.header
                  | {{j.setup}}
                img.ui.small.bordered.rounded.image.centered(src='media/images/fullstack.png' )   
                h2
                  | {{j.punchline}}
                br

      .ui.huge.facebook.button(ui-shape [options]="{selector: '#shape1', animation: 'flip left'}")
        | Come at me bro
        i.right.arrow.icon

.ui.inverted.vertical.center.aligned.segment.mobile.only
  .ui.container
    br
    br
    h1 - Yo! -
    img.ui.large.bordered.rounded.image.centered(src='media/images/fullstack.png' )   

.ui.vertical.stripe
  .ui.middle.aligned.stackable.grid.container
    .row
      .eight.wide.column
        h3.ui.header My name is Allen
        p
          | And I love to build things! It doesn't matter if it's a website, an app, or a giant killer robot designed to feast on the souls of the living (his name is Snuggles, btw).
        h3.ui.header More Than Just a Developer
        p
          | This isn't just a job for me; this is my passion.  
          | I'm constantly exploring new technologies and incorporating the very best of what I find.  
      .six.wide.right.floated.column( ui-modal [options]="{selector: '#modal1', blurring: true, transition: 'scale'}")        
        img.ui.large.bordered.rounded.image.is-pointer(src='{{page.imageModal.image}}') 
      
.ui.container
  .ui.link.cards.centered.four.doubling
    .card.blurring(*ngFor="#c of content" ui-dimmer [options]="{on: 'hover'}")
      .ui.dimmer
        .content
          h1 {{c.text}}
      .content
        .header 
          center
            h3 {{c.title}}
      .image(style='padding: 10px')
        img(src='{{c.image}}' )        

.ui.vertical.strip  
  #modal1.ui.modal.basic
    i.close.icon
    .image.content
      .ui.image.large.centered
        img(src='{{page.imageModal.image}}')
        center
          small {{page.imageModal.description}}

  
.ui.vertical.stripe
  .ui.middle.aligned.stackable.grid.container
    .center.aligned.column
        parts-filler

      
.ui.vertical.stripe.quote.segment.inverted.mobile.hidden
  .ui.equal.width.stackable.internally.celled.grid.doubling
    .center.aligned.row
      .column(*ngFor='#c of commentsAboutMe ')
        div(style='min-height: 200px')
          h3
            | "{{c.quote}}"             
        p
          br
          br
          img.ui.avatar.image(src='{{c.image}}')      
          br
          br
          | {{c.from}}
          br
          small {{c.company}}
br          
.ui.vertical.stripe.quote.segment.inverted
  .ui.equal.width.stackable.internally.celled.grid.doubling
    .center.aligned.row          
      .column
        h3
          | "HIRE THIS BEAUTIFUL LUNATIC RIGHT NOW!"    
        br
        br
        img.ui.avatar.image(src='media/images/rachel.png')      
        br
        br
        p
          | You, Smartest Hiring Manager Ever
        small
          | The Place Where You Work At
        
